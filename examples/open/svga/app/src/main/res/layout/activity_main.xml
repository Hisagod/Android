<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="test"
            android:text="测试" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="resourceList"
            android:text="资源列表" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="svgaClick"
            android:text="SVGA点击事件" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="dynamic"
            android:text="SVGA的Dynamic"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="useInList"
            android:text="列表使用SVGA" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="queue"
            android:text="队列使用SVGA" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="vp"
            android:text="VP+Fragment使用" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gif"
            android:text="加载Gif" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
